@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Message"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container-fluid vh-100" style="background: #f8f9fa;">
    <div class="row h-100 g-0">
        <!-- Sección de Imagen -->
        <div class="col-lg-7 d-none d-lg-block h-100">
            <div class="h-100 position-relative"
                 style="background: url('https://c0.wallpaperflare.com/preview/683/697/166/united-states-new-york-arquitectura-architecture.jpg') center/contain no-repeat;
                        min-height: 100vh;">
            </div>
        </div>

        <!-- Formulario de Login -->
        <div class="col-lg-5 d-flex align-items-center justify-content-center">
            <div class="card border-0 p-4 p-xl-5" style="max-width: 500px; width: 100%;">
                <form id="account" method="post" class="w-100">
                    <div class="text-center mb-5">
                        <h1 class="h2 fw-bold mb-4 text-dark">@ViewData["Title"]</h1>
                        <p class="text-muted">Bienvenido de vuelta, por favor ingresa tus credenciales</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control"
                               style="border-radius: 12px; height: 56px;"
                               placeholder="correo@ejemplo.com" />
                        <label asp-for="Input.Email" class="text-dark">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control"
                               style="border-radius: 12px; height: 56px;"
                               placeholder="contraseña" />
                        <label asp-for="Input.Password" class="text-dark">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   style="width: 1.2em; height: 1.2em;"
                                   asp-for="Input.RememberMe" />
                            <label class="form-check-label text-dark" asp-for="Input.RememberMe">
                                Recordarme
                            </label>
                        </div>
                        <a asp-page="./ForgotPassword" class="text-decoration-none text-dark">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </div>

                    <button type="submit"
                            class="w-100 btn btn-dark btn-lg rounded-pill py-3 fw-semibold">
                        Iniciar sesión
                    </button>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            ¿No tienes cuenta?
                            <a asp-page="./Register"
                               class="text-dark text-decoration-none fw-semibold">
                                Regístrate aquí
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Animaciones para inputs
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.borderColor = '#212529';
                this.style.boxShadow = '0 0 0 3px rgba(33, 37, 41, 0.1)';
            });

            input.addEventListener('blur', function() {
                this.style.borderColor = '#dee2e6';
                this.style.boxShadow = 'none';
            });
        });

        // Efecto hover para botón
        const loginButton = document.querySelector('.btn-dark');
        loginButton.addEventListener('mouseover', () => {
            loginButton.style.transform = 'translateY(-2px)';
        });

        loginButton.addEventListener('mouseout', () => {
            loginButton.style.transform = 'translateY(0)';
        });
    </script>
}