@model VIMOD.Domain.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Editar categoría</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control rounded-pill" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <input asp-for="Descripcion" class="form-control rounded-pill" />
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Estado" id="Estado" />
                    <label class="form-check-label" for="Estado">
                        @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                    <button type="submit" class="btn btn-warning rounded-pill px-4">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
