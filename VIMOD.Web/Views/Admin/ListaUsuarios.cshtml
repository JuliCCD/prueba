@model IEnumerable<VIMOD.Domain.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-5">
    <h2 class="mb-4">Lista de Usuarios</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Usuario</th>
                <th>Correo</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Teléfono</th>
                <th>Fecha de Nacimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.UserName</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Apellido</td>
                    <td>@usuario.Direccion</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.FechaDeNacimiento.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="EditarUsuario" asp-route-id="@usuario.Id" class="btn btn-sm btn-primary me-1">Editar</a>

                        <form asp-action="EliminarUsuario" asp-route-id="@usuario.Id" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que quieres eliminar este usuario?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
