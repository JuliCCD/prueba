@model VIMOD.Domain.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container-fluid vh-100" style="background: #f8f9fa;">
    <div class="row h-100 g-0">
        <!-- Imagen lateral -->
        <div class="col-lg-7 d-none d-lg-block h-100">
            <div class="h-100 position-relative"
                 style="background: url('https://c0.wallpaperflare.com/preview/683/697/166/united-states-new-york-arquitectura-architecture.jpg') center/cover no-repeat;
                        min-height: 100vh;">
            </div>
        </div>

        <!-- Formulario -->
        <div class="col-lg-5 d-flex align-items-center justify-content-center">
            <div class="card border-0 shadow-sm p-4 p-xl-5" style="max-width: 500px; width: 100%;">
                <form asp-action="Login" method="post" class="w-100">
                    <div class="text-center mb-4">
                        <h1 class="h3 fw-bold text-dark">@ViewData["Title"]</h1>
                        <p class="text-muted">Bienvenido, inicia sesión para continuar</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Correo -->
                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com"
                               style="border-radius: 12px; height: 56px;" />
                        <label asp-for="Email" class="text-dark">Correo electrónico</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control" type="password"
                               placeholder="Contraseña" style="border-radius: 12px; height: 56px;" />
                        <label asp-for="Password" class="text-dark">Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Recordarme y recuperar -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-dark">Recordarme</label>
                        </div>
                        <a href="#" class="text-decoration-none text-dark small">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </div>

                    <!-- Botón -->
                    <button type="submit" class="w-100 btn btn-dark btn-lg rounded-pill py-3 fw-semibold">
                        Iniciar sesión
                    </button>

                    <!-- Registro -->
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            ¿No tienes cuenta?
                            <a asp-controller="Account" asp-action="Register"
                               class="text-dark text-decoration-none fw-semibold">
                                Regístrate aquí
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
