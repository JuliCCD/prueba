@model VIMOD.Domain.Models.Curso

@{
    ViewData["Title"] = "Pagar Curso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3">
                <img src="@Model.URLImagen" class="card-img-top img-fluid" alt="@Model.Nombre" />
                <div class="card-body">
                    <h3 class="card-title text-center">@Model.Nombre</h3>
                    <p class="text-muted text-center">@Model.Descripcion</p>
                    <p class="text-center"><strong>Precio: </strong>@Model.Precio.ToString("C")</p>

                    <!-- PAGO CLÁSICO -->
                    <form asp-action="ConfirmarPago" asp-controller="Tienda" method="post">
                        <input type="hidden" name="IdCurso" value="@Model.IdCurso" />
                        <button type="submit" class="btn btn-success w-100">Confirmar y Pagar</button>
                    </form>

                    <!-- BOTÓN DE PAGO IZIPAY -->
                    <div class="text-center mt-3">
                        <h5 class="mb-2">O paga con:</h5>
                        @Html.Raw(ViewBag.FormularioIzipay)
                    </div>

                    <a href="@Url.Action("Index", "Tienda")" class="btn btn-secondary w-100 mt-4">Volver a la Tienda</a>
                </div>
            </div>
        </div>
    </div>
</div>