@model VIMOD.Domain.Models.Carousel

@{
    ViewData["Title"] = "Editar imagen del carrusel";
}

<div class="container mt-5">
    <h2 class="mb-4">Editar Imagen del Carrusel</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Titulo" class="form-label fw-semibold">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Orden" class="form-label fw-semibold">Orden</label>
            <input asp-for="Orden" type="number" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Activo" type="checkbox" class="form-check-input" />
            <label asp-for="Activo" class="form-check-label">Activo</label>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Imagen Actual</label><br />
            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
            {
                <img src="@Model.ImagenUrl" class="img-fluid rounded border mb-2" style="max-height: 200px;" alt="@Model.Titulo" />
            }
            else
            {
                <p class="text-muted">No hay imagen cargada.</p>
            }
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Reemplazar Imagen</label>
            <input type="file" name="nuevaImagen" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
