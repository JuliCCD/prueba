@model VIMOD.Domain.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Crear Curso";
}

<h2 class="mb-4 text-black fw-bold"><i class="fas fa-plus-circle me-2"></i>Agregar Curso</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label text-dark fw-semibold"><i class="fas fa-book me-2"></i>Nombre del Curso</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Escriba aquí" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label text-dark fw-semibold"><i class="fas fa-align-left me-2"></i>Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" placeholder="Escriba aquí"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label text-dark fw-semibold"><i class="fas fa-dollar-sign me-2"></i>Precio</label>
                        <input asp-for="Precio" class="form-control" placeholder="Ej: 120.00" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PrecioDescuento" class="form-label text-dark fw-semibold"><i class="fas fa-tags me-2"></i>Precio con Descuento</label>
                        <input asp-for="PrecioDescuento" class="form-control" placeholder="Opcional" />
                        <span asp-validation-for="PrecioDescuento" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImagenArchivo" class="form-label text-dark fw-semibold">
                            <i class="fas fa-image me-2"></i>Imagen del Curso
                        </label>
                        <input asp-for="ImagenArchivo" type="file" class="form-control" />
                        <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="DocenteAsignado" class="form-label text-dark fw-semibold"><i class="fas fa-user-tie me-2"></i>Docente</label>
                        <input asp-for="DocenteAsignado" class="form-control" placeholder="Nombre del docente" />
                        <span asp-validation-for="DocenteAsignado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdCategoria" class="form-label text-dark fw-semibold"><i class="fas fa-layer-group me-2"></i>Categoría</label>
                        <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.IdCategoria">
                            <option value="">Seleccione una opción</option>
                        </select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Crear Curso" class="btn btn-primary btn-lg rounded-pill" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill">Volver a la lista</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a2e0f1f9c8.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
